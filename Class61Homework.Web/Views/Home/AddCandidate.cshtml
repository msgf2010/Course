<div class="container">
    <div class="text-center">
        <h2>Add New Candidate</h2>
    </div>
    <br />
    <div class="row">
        <form id="candidate-form" method="post" action="/home/addcandidate">
            <div class="col-md-4 col-md-offset-2">
                <input id="first-name" tabindex="1" type="text" name="firstname" class="form-control" placeholder="First Name" />
                <br />
                <input id="phonenumber" tabindex="3" type="text" name="phonenumber" class="form-control" placeholder="Phone Number" />
                <br />
            </div>
            <div class="col-md-4">
                <input id="last-name" tabindex="2" type="text" name="lastname" class="form-control" placeholder="Last Name" />
                <br />
                <input id="email" tabindex="4" type="text" name="email" class="form-control" placeholder="Email" />
                <br />
            </div>
            <div class="col-md-8 col-md-offset-2">
                <textarea tabindex="5" style="height:200px" type="text" name="Notes" class="form-control" placeholder="Notes"></textarea>
                <br />
                <button tabindex="6" id="add-person" disabled="disabled" type="submit" class="btn btn-success">Add Person</button>
            </div>
        </form>
    </div>
</div>

@section scripts{
    <script src="~/js/Index.js"></script>
}