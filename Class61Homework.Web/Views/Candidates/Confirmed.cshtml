@using Class61Homework.Data;
@model CandidateModelView

<div class="container">
    <div class="text-center">
        <h2>Confirmed Candidates</h2>
    </div>
    <br />
    <div class="row">
        <table class="table table-bordered table-striped">
            <tr>
                <th>First Name</th>
                <th>Last Name</th>
                <th>Phone Number</th>
                <th>Email</th>
                <th>Notes</th>
            </tr>
            @foreach (Person p in Model.People)
            {
                <tr>
                    <td>@p.FirstName</td>
                    <td>@p.LastName</td>
                    <td>@p.PhoneNumber</td>
                    <td>@p.Email</td>
                    <td>@p.Notes</td>
                </tr>
            }
        </table>
    </div>
</div>